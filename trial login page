script.js
  document.getElementById('loginForm').addEventListener('submit', function(event) {
  event.preventDefault(); // Prevents form from submitting
  const email = document.getElementById('email').value;
  const pass = document.getElementById('pass').value;

  if (email === "" || !email.includes('@')) {
      alert("Please enter a valid email");
      document.getElementById('email').focus();
      document.getElementById('email').style.border = "solid 3px red";
      return false;
  }

  if (pass === "" || pass.length < 6) {
      alert("Please enter a valid password that has at least 6 characters and symbols");
      document.getElementById('pass').focus();
      document.getElementById('pass').style.border = "solid 3px red";
      return false;
  }

  func();
});

function func() {
  const email = document.getElementById('email').value;
  const pass = document.getElementById('pass').value;
  if (email === 'customer01@gmail.com' && pass === '123456') {
      alert("Login successful. You are being redirected to another webpage.");
      window.location.assign("welcome.html");
  } else {
      alert("Login failed. Please try again.");
  }
}

